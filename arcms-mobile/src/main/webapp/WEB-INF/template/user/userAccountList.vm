#set($layout = "/layout/blank.vm")
<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <div class="BoxStyleA">
                <div class="breadcrumbs" id="breadcrumbs">
                    <i class="modal-logo interact"></i>
                    <ul class="breadcrumb" style="margin-left: 2px">
                        <li>
                        <li>与客户互动</li>
                        </li>
                        <li class="active">账户明细</li>
                    </ul><!-- .breadcrumb -->
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        <form class="form-search" id="searchForm">
                            <div class="row">
                                <div class="col-xs-16 col-sm-8">
                                    <div class="input-group">
                                        <input type="hidden"   name="poolId">
                                        <span class="ml20">微信昵称：<input  type="text" name="wxNickName" /></span>
                                        <span class="ml20">&nbsp;&nbsp;最后一次提现时间：<input  type="text" name="startDate" onclick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})"/></span>
                                        <span class="ml20">&nbsp;&nbsp;至：<input  type="text" name="endDate" onclick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})"/></span>
                            <span class="input-group-btn">
                                <input class="btn_searchA ml20" type="submit" value="搜索"/>
                            </span>

                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div>&nbsp</div>
            <div class="BoxStyleA">
                <div class="BoxStyleATop">
                    <span class="fl">红包账户信息</span>

                    <!--<a href="" class="fr">X</a>-->
                </div>
                <table id="hbAccountTable" class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th class="center">
                            <label>
                                <input type="checkbox" class="ace" />
                                <span class="lbl"></span>
                            </label>
                        </th>
                        <th>微信昵称</th>
                        <th>性别</th>
                        <th>累计领取金额(元)</th>
                        <th>账户余额(元)</th>
                        <th>累计提现次数</th>
                        <th>累计提现金额(元)</th>
                        <th>累计领取个数</th>
                        <th>是否老客户</th>
                        <th>是否验证</th>
                        <th>最后一次提现时间</th>
                    </tr>
                    </thead>

                    <tbody id="tbContainer">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="${rc.contextPath}/media/js/admin/user/userAccount.js"></script>