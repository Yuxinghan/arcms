#set($layout = "/layout/blank.vm")
<div class="row">
<div class="col-xs-12">
    <div class="table-responsive">
        <div class="BoxStyleA">
            <div class="breadcrumbs" id="breadcrumbs">
                <i class="modal-logo interact"></i>
                <ul class="breadcrumb" style="margin-left: 2px">
                    <li>
                    <li>与客户互动</li>
                    </li>
                    <li class="active"><a  href="javascript:hbPoolList()">红包查询</a></li>
                    <li class="active">红包领取人员明细</li>
                </ul><!-- .breadcrumb -->
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <form class="form-search" id="searchForm">
                        <div class="row">
                            <div class="col-xs-16 col-sm-8">
                                <div class="input-group">
                                    <input type="hidden"   name="poolId">
                                    <input type="hidden"   name="status" value="received">
                                    <span class="ml20">领取人昵称：<input  type="text" name="wxNickName" /></span>
                                    <span class="ml20">&nbsp;&nbsp;领取时间：<input  type="text" name="startDate" onclick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})"/></span>
                                    <span class="ml20">&nbsp;&nbsp;至：<input  type="text" name="endDate" onclick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})"/></span>
                            <span class="input-group-btn">
                                <input class="btn_searchA ml20" type="submit" value="搜索"/>
                            </span>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div>&nbsp</div>
        <div class="BoxStyleA">
            <div class="BoxStyleATop">
                <span class="fl">红包领用明细信息</span>

                <!--<a href="" class="fr">X</a>-->
            </div>
            <table id="hbObtainTable" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="center">
                        <label>
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </th>
                    <th>红包池名称</th>
                    <th>领取人昵称</th>
                    <th>性别</th>
                    <th>领取金额(元)</th>
                    <th>互动次数</th>
                    <th>联系电话</th>
                    <th>是否老客户</th>
                    <th>是否验证</th>
                    <th>领取时间</th>
                </tr>
                </thead>
                <tbody id="tbContainer"
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
<script  type="text/javascript">
    $('#searchForm input[name=poolId]').val(${request.getParameter("hbPoolId")});
</script>
<script type="text/javascript" src="${rc.contextPath}/media/js/admin/hongbao/hbObtain.js"></script>