#set($layout = "/layout/blank.vm")
<div id="web">
<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <div class="BoxStyleA">
                <div class="breadcrumbs" id="breadcrumbs">
                    <i class="modal-logo interact"></i>
                    <ul class="breadcrumb" style="margin-left: 2px;">
                        <li></li>
                        <li>商家管理</li>
                        <li>商家列表</li>
                    </ul><!-- .breadcrumb -->
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        <form class="form-search" id="searchForm">
                            <div class="row">
                                <div class="col-xs-16 col-sm-12">
                                    <div class="input-group">
                                        <span class="ml20">提现商家：<input  type="text"  name="sellerName" /></span>

                            <span class="ml20">&nbsp;&nbsp;&nbsp;状态：
                                <select  style="width: 150px;" name="status">
                                    <option value="">全部</option>
                                    <option value="WAIT_CASH">待提现</option>
                                    <option value="CASHED" >已提现</option>
                                </select>
                            </span>
                                        <span class="ml20">&nbsp;&nbsp;创建时间：<input  type="text" name="startDate" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})"/></span>
                                        <span class="ml20">&nbsp;&nbsp;至：<input  type="text" name="endDate" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})"/></span>
                            <span >
                                <input class="btn_searchA ml20" type="button" id="cashSearch" value="搜索"/>
                            </span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div>&nbsp</div>
            <div class="BoxStyleA">
                <div class="BoxStyleATop">
                    <span class="fl">提现信息</span>
                    <div class="icon_box fl">
                           <a id="delHbpool" href="" class="icon_shelves"  onclick="setStateForm('CASHED')" style="text-indent : -10px">确认提现</a>
##                        <a id="delHbpool" href="" class="icon_shelves"  onclick="setStateForm('WAIT_CASH')" style="text-indent : -10px">重置待提现</a>
                    </div>
                    <!--<a href="" class="fr">X</a>-->
                </div>
                <table id="cashTable" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead>
                    <tr>
                        <td>
                            <label>
                                <input type="checkbox" class="ace" id="allCheckbox" onclick="javascript:selectAll()" value="true" />
                                <span class="lbl"></span>
                            </label>
                        </td>

                        <th style="width:20%">爱卡币金额</th>
                        <th style="width:20%">商家名称</th>
                        <th style="width:20%">状态</th>
                        <th style="width:20%">创建时间</th>
                    ##                        <th style="width: 13%">结束时间</th>
                    </tr>

                    </thead>

                    <tbody id="tbContainer">
                    </tbody>

                    <tfoot>
                    <tr>
                        <th>合计:</th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                    </tfoot>

                </table>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="${rc.contextPath}/media/js/admin/cash/cash.js"></script>
</div>
