#set($layout = "/layout/blank.vm")


<div class="row">
<div class="col-xs-12">
    <div class="table-responsive">
        <div class="BoxStyleA">
            <div class="breadcrumbs" id="breadcrumbs">
                <i class="modal-logo interact"></i>
                <ul class="breadcrumb" style="margin-left: 2px">
                    <li></li>
                    <li>爱卡设置</li>
                    <li>套餐设置</li>
                </ul>
                <!-- .breadcrumb -->
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <form class="form-search" id="signInConifgForm">
                        <input type="hidden" name="id"/>
                        <div class="tabbable" >
                            <ul class="nav nav-tabs padding-12 tab-color-blue background-blue" id="myTab4" style="width: 860px;margin: 0 auto">
                                <li class="active">
                                    <a data-toggle="tab" href="#indexpage">缴费套餐设置</a>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#point">充值套餐设置</a>
                                </li>
                            </ul>
                            <div class="row" id="mvGruop">
                              <div class="tab-content">
                                    <div id="indexpage" class="tab-pane in active">
                                        <div id="package1">
                                             #set($payPackagesIndex=1)
                                             #if($payPackagesVOList)
                                                 #foreach($payPackagesVO in $payPackagesVOList)
                                                     <div class="col-xs-16 col-sm-12" id="input_group_'+$payPackagesIndex+'" style="margin-top: 10px"><div class="col-sm-3"></div><div class="integralSignIn1 input-group">&nbsp;套餐名称：&nbsp;&nbsp;<input type="text" class="packageName" id="packageName'+$payPackagesIndex+'" value="$payPackagesVO.packageName"/>&nbsp;&nbsp;套餐金额：&nbsp;&nbsp;<input  type="text" class="packageMoney" id="packageMoney_'+$payPackagesIndex+'" value="$payPackagesVO.packageMoney"/>&nbsp;&nbsp;套餐年限：&nbsp;&nbsp;<input  class="packageYear" type="text" id="packageYear_'+$payPackagesIndex+'" value="$payPackagesVO.packageYear"/>&nbsp;&nbsp;<span class="delIcon" id="del_'+$payPackagesIndex+'"></span></div> </div>
                                                     #set($payPackagesIndex=$payPackagesIndex+1)
                                                 #end
                                             #else
                                                <div class="col-xs-16 col-sm-12" id="input_group_1">
                                                    <div class="col-sm-3"></div>
                                                    <div class="integralSignIn1 input-group">
                                                         &nbsp;套餐名称：&nbsp;&nbsp;<input type="text" class="packageName" id="packageName_1"/>&nbsp;&nbsp;套餐金额：&nbsp;&nbsp;<input  class="packageMoney" type="text" id="packageMoney_1"/>&nbsp;&nbsp;套餐年限：&nbsp;&nbsp;<input  class="packageYear" type="text" id="packageYear_1"/>
                                                    </div>
                                                </div>
                                             #end
                                         </div>
                                    </div>
                                    <div id="point" class="tab-pane">
                                        <div id="package2">
                                          #set($rechargePackagesIndex=1)
                                          #if($rechargePackagesVOList)
                                              #foreach($rechargePackagesVO in $rechargePackagesVOList)
                                                  <div class="col-xs-16 col-sm-12" id="input_group_'+$rechargePackagesIndex+'" style="margin-top: 10px"><div class="col-sm-3"></div><div class="integralSignIn2 input-group">&nbsp;套餐名称：&nbsp;&nbsp;<input type="text" class="packagesName" id="packagesName_'+$rechargePackagesIndex+'" value="$rechargePackagesVO.packagesName"/>&nbsp;&nbsp;充值金额：&nbsp;&nbsp;<input  type="text" class="rechargeMoney" id="rechargeMoney_'+$rechargePackagesIndex+'" value="$rechargePackagesVO.rechargeMoney"/>&nbsp;&nbsp;爱卡币数量：&nbsp;&nbsp;<input  class="icardMoney" type="text" id="icardMoney_'+$rechargePackagesIndex+'" value="$rechargePackagesVO.icardMoney"/>&nbsp;&nbsp;<span class="delIcon" id="del_'+$rechargePackagesIndex+'"></span></div> </div>
                                                  #set($rechargePackagesIndex=$rechargePackagesIndex+1)
                                              #end
                                          #else
                                             <div class="col-xs-16 col-sm-12" id="input_group_1">
                                                 <div class="col-sm-3"></div>
                                                 <div class="integralSignIn2 input-group">
                                                      &nbsp;套餐名称：&nbsp;&nbsp;<input type="text" class="packagesName" id="packagesName_1"/>&nbsp;&nbsp;充值金额：&nbsp;&nbsp;<input  class="rechargeMoney" type="text" id="rechargeMoney_1"/>&nbsp;&nbsp;爱卡币数量：&nbsp;&nbsp;<input  class="icardMoney" type="text" id="icardMoney_1"/>
                                                 </div>
                                             </div>
                                          #end
                                        <div>
                                    </div>
                              </div>
                            </div>
                            <div>&nbsp</div>
                            <div style="margin-bottom: 10px;margin-top: 20px;">
                                 <center>
                                     <input class="sure" type="button" value="增加一条" onclick="addSignInCofig()"/>
                                     <input class="sure" type="submit" value="保存" onclick="saveOrUpdateFrom()"/>
                                 </center>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div>&nbsp</div>
    </div>
</div>
</div>
<script type="text/javascript" src="${rc.contextPath}/media/js/admin/packages/packagesAdd.js"></script>