#set($layout = "/layout/blank.vm")
<style type="text/css">
    #goodsList tbody tr td {
        vertical-align: middle;
    }
</style>
<div id="web">
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <div class="BoxStyleA">
                    <div class="breadcrumbs" id="breadcrumbs">
                        <i class="modal-logo interact"></i>
                        <ul class="breadcrumb" style="margin-left: 2px">
                            <li></li>
                            <li>订单管理</li>
                            <li class="active">订单列表</li>
                        </ul>
                        <!-- .breadcrumb -->
                    </div>

                    <div class="widget-body">
                        <div class="widget-main">
                            <form class="form-search" id="searchTradeForm">

                                <div class="row">
                                    <div class="col-xs-16 col-sm-8" style="width:100%; text-align: center">
                                        <div class="input-group" style="width:100%">
                                            <span>订单ID：<input class="input-sm" type="text" id="form-field-4" placeholder="" name="tid"/></span>&nbsp;&nbsp;
                                            <span>
                                                订单状态：
                                                <select name="status">
                                                    <option value="">请选择</option>
                                                    <option value="WAIT_BUYER_PAY" selected>未付款</option>
                                                    <option value="WAIT_BUYER_CONSUME">未消费</option>
                                                    <option value="WAIT_BUYER_JUDGE">未评价</option>
                                                    <option value="COMPLETED">已完成</option>
                                                    <option value="REFUND">已退款</option>
                                                    <option value="CANCELED">已取消</option>
                                                </select>
                                            </span>
                                            &nbsp;&nbsp;
                                            <div class="input-group" style="margin-top: 25px;">
                                                <button id="tradeSearch" class="btn btn-primary" style="margin-left: 45px;">查询</button>
                                                <button id="cardConsume" class="btn btn-primary" style="margin-left: 45px;">消费卡券</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
                <div>&nbsp;</div>
                <!-- 右边 -->
                <div class="BoxStyleA">
                    <table id="tradeList" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <td style="width: 300px">订单号</td>
                            <td>状态</td>
                            <td>金额</td>
                            <td>支付方式</td>
                            <td>付款时间</td>
                            <td>订单来源</td>
                            <td>买家昵称</td>
                            <td>创建时间</td>
                            <td>创建人</td>
                            <td>备注</td>
                            <td>操作</td>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>


                </div>


            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModal" aria-hidden="true">
    <div class="modal-dialog" style="width: 1200px;z-index:-999px">
        <div class="modal-content" >
            <div class="tiptop"><span>备注</span><a data-dismiss="modal" aria-hidden="true"></a></div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <div class="BoxStyleA">
                            <div class="breadcrumbs" id="breadcrumbs">
                                <i class="modal-logo interact"></i>
                                <ul class="breadcrumb" style="margin-left: 2px">
                                    <li>
                                    <li>订单列表</li>
                                    </li>
                                    <li class="active">更新备注</li>
                                </ul><!-- .breadcrumb -->
                            </div>

                            <div class="widget-body">
                                <div class="widget-main">
                                    <form class="form-search">
                                        <div class="row" style="margin-top:30px;border-top-width: 2px">
                                            <div class="col-xs-16 col-sm-10">
                                                <div class="input-group">
                                                    <input id="updateTid" type="hidden"/>
                                                    <span class="ml20">备注：<textarea id="comment" name="comment" rows="5" style="min-width: 500px"></textarea></span>
                                                        <input class="btn_searchA ml20" type="button" id="updateCommentBtn" value="更新"/>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div>&nbsp</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cardConsumeModal" tabindex="-1" role="dialog" aria-labelledby="cardConsumeModal" aria-hidden="true">
    <div class="modal-dialog" style="width: 1200px;z-index:-999px">
        <div class="modal-content" >
            <div class="tiptop"><span>消费卡券</span><a data-dismiss="modal" aria-hidden="true"></a></div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <div class="BoxStyleA">
                            <div class="breadcrumbs" id="breadcrumbs">
                                <i class="modal-logo interact"></i>
                                <ul class="breadcrumb" style="margin-left: 2px">
                                    <li>
                                    <li>订单列表</li>
                                    </li>
                                    <li class="active">消费卡券</li>
                                </ul><!-- .breadcrumb -->
                            </div>

                            <div class="widget-body">
                                <div class="widget-main">
                                    <form class="form-search">
                                        <div class="row" style="margin-top:30px;border-top-width: 2px">
                                            <div class="col-xs-16 col-sm-10">
                                                <div class="input-group">
                                                    <span class="ml20">卡券号：<input id="cardNo" name="cardNo" rows="5" style="min-width: 500px"></input></span>
                                                    <input class="btn_searchA ml20" type="button" id="consumeCardBtn" value="消费"/>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div>&nbsp</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    // 未发货订单全选
    $('#goodsList th input:checkbox').on('click', function () {
        var that = this;
        $(this).closest('table').find('tr > td:first-child input:checkbox')
                .each(function () {
                    this.checked = that.checked;
                    $(this).closest('tr').toggleClass('selected');
                });
    });

    var shopName = '$!shopName';

    $('#add').on('click',function(){
        try {
            freshUrl(baseUrl + '/goods/toAdd');
        }catch(e){
            console.dir(e);
        }
        return false;
    });
</script>
<script type="text/javascript" charset="utf-8" src="${rc.contextPath}/media/js/admin/trade/trade.js"></script>
