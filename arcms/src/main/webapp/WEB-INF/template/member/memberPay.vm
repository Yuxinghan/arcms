#set($layout = "/layout/blank.vm")
<script type="text/javascript" src="${rc.contextPath}/media/js/admin/member/memberRecharge.js"></script>

<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <div class="BoxStyleA">
                <div class="breadcrumbs" id="breadcrumbs">
                    <i class="modal-logo interact"></i>
                    <ul class="breadcrumb" style="margin-left: 2px;">
                        <li></li>
                        <li>统计分析</li>
                        <li>消费详情</li>
                    </ul>
                    <!-- .breadcrumb -->
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        <form class="form-search" id="memberFeeForm">
                            <div class="row">
                                <div class="col-xs-16 col-sm-12">
                                    <div class="input-group">
                                        <span class="ml20">充值流水：<input type="text" name="rechargeFlow"/></span>
                                        <span class="ml20">状态：<input type="text" name="status/></span>
                                        <span class="ml20">用户名：<input type="text" name="userName"/></span>

                                        <span class="ml20">&nbsp;&nbsp;开通时间：<input  type="text" name="startTime" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})"/></span>
                                        <span class="ml20">&nbsp;&nbsp;到期时间：<input  type="text" name="endTime" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})"/></span>
                                        <span>
                                          <button class="btn_searchA ml20" type="button" id="memberFeeSearch"> 查询  </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div>&nbsp</div>
            <div class="BoxStyleA">
                <div class="BoxStyleATop">
                    <span class="fl">缴费信息</span>
                    <!--<a href="" class="fr">X</a>-->
                </div>
                <table id="memberFeeTable" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead>
                    <tr>
                        <th>缴费流水</th>
                        <th>用户名称</th>
                        <th>支付方式</th>
                        <th>金额</th>
                        <th>开通时间</th>
                        <th>到期时间</th>
                        <th>状态</th>
                    </tr>
                    </thead>

                    <tbody id="tbContainer">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>