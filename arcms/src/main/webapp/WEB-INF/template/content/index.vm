#set($layout = "/layout/blank.vm")
<style type="text/css">
    #goodsList tbody tr td {
        vertical-align: middle;
    }
</style>
<div id="web">
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <div class="BoxStyleA">
                    <div class="breadcrumbs" id="breadcrumbs">
                        <i class="modal-logo interact"></i>
                        <ul class="breadcrumb" style="margin-left: 2px">
                            <li></li>
                            <li>内容管理</li>
                            <li class="active">文章列表</li>
                        </ul>
                        <!-- .breadcrumb -->
                    </div>

                    <div class="widget-body">
                        <div class="widget-main">
                            <form class="form-search" id="searchContenForm">

                                <div class="row">
                                    <div class="col-xs-16 col-sm-8" style="width:100%; text-align: center">
                                        <div class="input-group" style="width:100%">
                                            <span>文章名称：<input class="input-sm" type="text" id="form-field-4" placeholder="" name="title"/></span>&nbsp;&nbsp;
                                            <span>
                                                文章位置：
                                                <select name="articlePosition">
                                                    <option value="">请选择</option>
                                                    <option value="user" selected>用户端</option>
                                                    <option value="seller">商家段</option>
                                                    <option value="heart">夺宝</option>
                                                </select>
                                            </span>
                                            &nbsp;&nbsp;
                                            <span>
                                                状态：
                                                <select name="status">
                                                    <option value="">请选择</option>
                                                    <option value="published" selected>已发布</option>
                                                    <option value="unPublish">未发布</option>
                                                </select>
                                            </span>
                                            <div class="input-group" style="margin-top: 25px;">
                                                <button id="contentSearch" class="btn btn-primary" style="margin-left: 45px;">查询</button>
                                                <button id="contentAdd" class="btn btn-primary" style="margin-left: 45px;">添加文章</button>
                                                <button id="contentDelete" class="btn btn-primary" style="margin-left: 25px;">删除文章</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
                <div>&nbsp;</div>
                <!-- 右边 -->
                <div class="BoxStyleA">
                    <table id="contentList" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>
                                <label>
                                    <input type="checkbox" class="ace" id="selectAll"/>
                                    <span class="lbl"></span>
                                </label>
                            </th>
                            <td style="width: 300px">标题</td>
                            <td>位置</td>
                            <td>发布状态</td>
                            <td>缩略图</td>
##                            <td>详情</td>
                            <td>创建时间</td>
                            <td>创建人</td>
                            <td>操作</td>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>


                </div>


            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // 未发货订单全选
    $('#goodsList th input:checkbox').on('click', function () {
        var that = this;
        $(this).closest('table').find('tr > td:first-child input:checkbox')
                .each(function () {
                    this.checked = that.checked;
                    $(this).closest('tr').toggleClass('selected');
                });
    });

    var shopName = '$!shopName';

    $('#add').on('click',function(){
        try {
            freshUrl(baseUrl + '/goods/toAdd');
        }catch(e){
            console.dir(e);
        }
        return false;
    });
</script>
<script type="text/javascript" charset="utf-8" src="${rc.contextPath}/media/js/admin/content/content.js"></script>
