#set($layout = "/layout/blank.vm")
<script type="text/javascript" src="${rc.contextPath}/media/js/admin/message/message.js"></script>

<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <div class="BoxStyleA">
                <div class="breadcrumbs" id="breadcrumbs">
                    <i class="modal-logo interact"></i>
                    <ul class="breadcrumb" style="margin-left: 2px;">
                        <li></li>
                        <li>留言管理</li>
                        <li>意见反馈</li>
                    </ul>
                    <!-- .breadcrumb -->
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        <form class="form-search" id="searchForm">
                            <div class="row">
                                <div class="col-xs-16 col-sm-12">
                                    <div class="input-group">
                                        <span class="ml20">意见内容：<input type="text" name="msgContent"/></span>

                                        <span class="ml20">&nbsp;&nbsp;创建时间：<input  type="text" name="msgStartTime" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})"/></span>
                                        <span class="ml20">&nbsp;&nbsp;至：<input  type="text" name="msgEndTime" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})"/></span>

                                        <span>
                                          <button class="btn_searchA ml20" type="button" id="userMessageSearch"> 查询  </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div>&nbsp</div>
            <div class="BoxStyleA">
                <div class="BoxStyleATop">
                    <span class="fl">用户信息</span>
                   <!--<a href="" class="fr">X</a>-->
                </div>
                <table id="msgTable" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead>
                    <tr>
                        <th>标题</th>
                        <th>反馈内容</th>
                        <th>反馈时间</th>
                    </tr>

                    </thead>

                    <tbody id="tbContainer">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>