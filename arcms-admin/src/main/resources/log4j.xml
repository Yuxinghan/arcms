<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- ========================== 自定义输出格式说明================================ -->
    <!-- %p 输出优先级，即DEBUG，INFO，WARN，ERROR，FATAL -->
    <!-- %r 输出自应用启动到输出该log信息耗费的毫秒数  -->
    <!-- %c 输出所属的类目，通常就是所在类的全名 -->
    <!-- %t 输出产生该日志事件的线程名 -->
    <!-- %n 输出一个回车换行符，Windows平台为“/r/n”，Unix平台为“/n” -->
    <!-- %d 输出日志时间点的日期或时间，默认格式为ISO8601，也可以在其后指定格式，比如：%d{yyy MMM dd HH:mm:ss,SSS}，输出类似：2002年10月18日 22：10：28，921  -->
    <!-- %l 输出日志事件的发生位置，包括类目名、发生的线程，以及在代码中的行数。举例：Testlog4.main(TestLog4.java:10)  -->
    <!-- ========================================================================== -->

    <!-- ========================== 输出方式说明================================ -->
    <!-- Log4j提供的appender有以下几种:  -->
    <!-- org.apache.log4j.ConsoleAppender(控制台),  -->
    <!-- org.apache.log4j.FileAppender(文件),  -->
    <!-- org.apache.log4j.DailyRollingFileAppender(每天产生一个日志文件), -->
    <!-- org.apache.log4j.RollingFileAppender(文件大小到达指定尺寸的时候产生一个新的文件),  -->
    <!-- org.apache.log4j.WriterAppender(将日志信息以流格式发送到任意指定的地方)   -->
    <!-- ========================================================================== -->
    <!-- 输出到控制台中 -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%-d{yyyy-MM-dd HH:mm:ss} [%c]-[%p] - %m%n" />
            <!-- "%-5p: [%t] [%c{3}.%M(%L)] | %m%n" -->
        </layout>
    </appender>

    <!-- 输出到日志文件  -->
    <appender name="DEFAULT-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${loggingRoot}/common-default.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%-d{yyyy-MM-dd HH:mm:ss} [%c]-[%p] - %m%n" />
        </layout>
    </appender>

    <!-- [公共Appender] 汇总错误 -->
    <appender name="ERROR-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${loggingRoot}/common-error.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <param name="threshold" value="error" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d [%X{loginUserEmail}/%X{loginUserID}/%X{remoteAddr}/%X{clientId} - %X{requestURIWithQueryString}] %-5p %c{2} - %m [TimeKey=%x]%n" />
        </layout>
    </appender>

    <!-- [公共Appender] Velocity -->
    <appender name="VELOCITY-APPENDER"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file"
               value="${loggingRoot}/common-velocity.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%-d{yyyy-MM-dd HH:mm:ss} [%c]-[%p] - %m%n" />
        </layout>
    </appender>


    <!-- [应用Appender] DAL层摘要日志 -->
    <appender name="DAL-DIGEST-APPENDER"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file"
               value="${loggingRoot}/dal-digest.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %m%n" />
        </layout>
    </appender>

    <!-- [应用Appender] BIZ层摘要日志 -->
    <appender name="BIZ-DIGEST-APPENDER"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file"
               value="${loggingRoot}/biz-digest.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %m%n" />
        </layout>
    </appender>

    <!-- [应用Appender] controller层摘要日志 -->
    <appender name="CONTROLLER-DIGEST-APPENDER"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file"
               value="${loggingRoot}/controller-digest.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %m%n" />
        </layout>
    </appender>

    <!-- [应用Appender] 其他层摘要日志 -->
    <appender name="OTHER-DIGEST-APPENDER"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file"
               value="${loggingRoot}/other-digest.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %m%n" />
        </layout>
    </appender>


    <!-- [公共Appender] dao层详细日志 -->
    <appender name="DAL-APPENDER"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${loggingRoot}/common-dal.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%-d{yyyy-MM-dd HH:mm:ss} [%c]-[%p] - %m%n" />
        </layout>
    </appender>

    <!-- [应用Appender] biz层详细日志 -->
    <appender name="BIZ-APPENDER"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file"
               value="${loggingRoot}/biz.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{2} - %m [TimeKey=%x]%n" />
        </layout>
    </appender>

    <!-- [应用Appender] controller层详细日志 -->
    <appender name="CONTROLLER-APPENDER"
              class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file"
               value="${loggingRoot}/controller.log" />
        <param name="append" value="true" />
        <param name="encoding" value="GBK" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{2} - %m [TimeKey=%x]%n" />
        </layout>
    </appender>

    <!-- ===== [框架Logger] ===== -->

    <!-- [框架Logger] Jakarta commons - 默认 -->
    <logger name="org.apache" additivity="false">
        <level value="${loggingLevel}" />
        <appender-ref ref="DEFAULT-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- [框架Logger] 数据访问层 - Ibatis -->
    <logger name="org.mybatis" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="DAL-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- [框架Logger] 数据访问层 - Ibatis -->
    <logger name="org.apache.ibatis" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="DAL-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>
    <!-- [框架Logger] 数据访问层 - SQL -->
    <logger name="java.sql" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="DAL-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>
    <!-- [框架Logger] spring osgi -->
    <logger name="org.springframework" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="DEFAULT-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- [框架Logger] spring servlet -->
    <logger name="org.springframework.servlet" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="DEFAULT-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- ============================================================== -->
    <!-- 业务 logger -->
    <!-- ============================================================== -->
    <!-- [业务Logger] 业务性能日志 -->
    <logger name="BIZ_DIGEST" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="BIZ-DIGEST-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- [业务Logger] dao性能日志 -->
    <logger name="DAL_DIGEST" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="DAL-DIGEST-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- [业务Logger] 控制层性能日志 -->
    <logger name="CONTROLLER_DIGEST" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="CONTROLLER-DIGEST-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- [业务Logger] 其他性能日志 -->
    <logger name="OTHER_DIGEST" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="OTHER-DIGEST-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- [应用Logger] 业务层日志 -->
    <logger name="com.arcms.admin.biz" additivity="true">
        <level value="${loggingLevel}"/>
        <appender-ref ref="BIZ-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- [应用Logger] 控制层日志 -->
    <logger name="com.arcms.admin.web.controller" additivity="true">
        <level value="${loggingLevel}" />
        <appender-ref ref="CONTROLLER-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
    </logger>

    <!-- ============================================================== -->
    <!-- Root logger -->
    <!-- ============================================================== -->

    <root>
        <level value="${loggingLevel}" />
        <appender-ref ref="DEFAULT-APPENDER" />
        <appender-ref ref="ERROR-APPENDER" />
        <appender-ref ref="CONSOLE" />
    </root>
</log4j:configuration>

